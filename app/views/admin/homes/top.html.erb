<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-4">
   <h2>管理者トップ</h2>
  </div>
  <div class="col-md-4">
   <table>
    <tr>
     <th>注文履歴一覧</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
     <td><%= order.postal_code %></td>
     <td><%= order.address %></td>
     <td><%= order.name %></td>
     <td><%= order.shipping_fee %></td>
     <td><%= order.total_payment %></td>
     <td><%= order.payment_method %></td>
     <td><%= link_to order.timestamps, admin_order_path(@order.id) %> </td>
    </tr>
    <% end %>
   </table>
  </div>
  </div>
 </div>



