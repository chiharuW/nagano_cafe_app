<%= render 'admin/sessions/list' %>
<div class="container">

 <div class="row">
  <div class="col-md-2">
　　<div class="p-3 mb-2 bg-light text-dark">注文履歴一覧</div>
　</div>
 </div>

 <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
            <th scope="col">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
         <% @orders.each do |order| %>
         <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d') , admin_order_path(order.id) %> </td>
          <td><%= order.name %></td>
          <td><%#= order.item .amount %></td>
          <td><%= order.status_i18n %></td>
         </tr>
         <% end %>
        </tbody>

   </table>
  </div>
  </div>
 </div>



