<%= render 'admin/sessions/list' %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
　　<div class="p-3 mb-2 bg-light text-dark"><%= @customer.full_name %>の会員情報編集</div>
　</div>
　</div>
　    

 <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
 <div class="row mb-3">
   <div class="col-md-2">会員ID</div>
   <div class="col-md-3"><%= @customer.id %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">氏名</div>
   <div class="col-md-3"><%= f.text_field :last_name %></div>
   <div class="col-md-3"><%= f.text_field :first_name %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">フリガナ</div>
   <div class="col-md-3"><%= f.text_field :last_name_kana %></div>
   <div class="col-md-3"><%= f.text_field :first_name_kana %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">郵便番号</div>
   <div class="col-md-3"><%= f.text_field :postal_code %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">住所</div>
   <div class="col-md-6"><%= f.text_field :address %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">電話番号</div>
   <div class="col-md-3"><%= f.text_field :telephone_number %></div>
  </div>
  <div class="row mb-3">
   <div class="col-md-2">メールアドレス</div>
   <div class="col-md-3"><%= f.text_field :email %></div>
  </div>
  
  <div class="row mb-3">
   <div class="col-md-2">会員ステータス</div>
   <%= f.radio_button :is_active, :default %>
   <%= f.label :is_active_default, '有効' %>
   <%= f.radio_button :is_active, :false %>  
   <%= f.label  :is_active_draft_false, '退会' %>
  </div>
  
  <div class="row pt-3 pl-5 mb-5">
   <%= f.submit '更新内容を保存', class: "btn btn-sm btn-success col-md-3" %>
　 <% end %>
　</div>
</div>