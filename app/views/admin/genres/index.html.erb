<h2>ジャンル一覧画面</h2>


<table>
  <tr>
   <th>ジャンル名</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
   <td><%= genre.name %></td>
   <td><%= link_to "編集", edit_admin_genre_path(genre.id) %> </td>
  </tr>
  <% end %>
</table>

<h2>ジャンル追加</h2>
 <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <h3>ジャンル名</h3>
   <%= f.text_field :name %>
   <%= f.submit"新規追加" %>
 <% end %>

