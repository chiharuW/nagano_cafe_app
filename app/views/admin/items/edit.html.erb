<%= render 'admin/sessions/list' %>
<div class="container">

 <div class="row">
  <div class="col-md-4">
　　<div class="p-3 mb-2 bg-light text-dark">商品編集</div>
　</div>
 </div>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<div class="row mb-2">
 <div class="col-md-2">商品画像</div>
 <div class="col-md-4"><%= f.file_field :image, accept: "image/*" %></div>
</div>
<div class="row mb-2">
 <div class="col-md-2">商品名</div>
 <div class="col-md-4"><%= f.text_field :name, size: 20 %></div>
</div>
<div class="row mb-2">
 <div class="col-md-2">商品説明</div>
 <div class="col-md-4"> <%= f.text_area :introduction, size: "25x5" %></div>
</div>
<div class="row mb-2">
 <div class="col-md-2">ジャンル</div>
 <div class="col-md-4"><%= f.collection_select(:genre_id, @genres, :id, :name) %></div>
</div>
<div class="row mb-2">
 <div class="col-md-2">税抜価格</div>
 <div class="col-md-4"><%= f.text_field :price, size: 20 %>円</div>
</div>
<div class="row mb-2">
 <div class="col-md-5"><%= f.submit"変更を保存", class:"btn btn-sm btn-success" %></div><% end %>
</div>
</div>