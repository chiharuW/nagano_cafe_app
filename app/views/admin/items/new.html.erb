<%= render 'admin/sessions/list' %>
<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-6">
   
<h2>新商品登録</h2>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
 <h3>商品名</h3>
  <%= f.text_field :name %>
 <h3>画像</h3>
  <%= f.file_field :image, accept: "image/*" %>
 <h3>商品説明</h3>
  <%= f.text_area :introduction %>
 <h3>価格</h3>
  <%= f.text_field :price %>
 <h3>ジャンル</h3>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
 <%= f.submit"登録" %>
<% end %>

</div>
</div>
</div>