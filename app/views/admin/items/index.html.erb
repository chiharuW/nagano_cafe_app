<h2>商品一覧</h2>

<table>
  <tr>
    <th>商品名</th>
    <th>商品説明</th>
    <th>商品価格</th>
    <th>商品ジャンル</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= link_to item.name, edit_admin_item_path(item.id) %></td>
    <td><%= item.introduction %></td>
    <td><%= item.price %></td>
    <td><%= item.genre_id %> </td>
  </tr>
  <% end %>
</table>

<%= link_to "新商品登録",  new_admin_item_path %>