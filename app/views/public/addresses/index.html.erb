<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-6">


<h2>配送先一覧</h2>
<table>
 <tr>
  <th>配送先宛名</th>
  <th>配送先郵便番号</th>
  <th>配送先住所</th>
 </tr>
<% @addresses.each do |address| %>
 <tr>
  <td><%= address.name %></td>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
 </tr>
<% end %>
</table>

<h2>新規配送先</h2>
<%= form_with model: @address do |f| %>
 <h3>配送先宛名</h3>
  <%= f.text_field :name %>
 <h3>配送先郵便番号</h3>
  <%= f.text_field :postal_code %>
  <h3>配送先住所</h3>
   <%= f.text_field :address %>
  <%= f.submit "新規登録" %>
 <% end %>
</div>
</div>
</div>