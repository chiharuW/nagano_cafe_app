<%= render 'public/sessions/list' %>

<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-4">

<h2>商品詳細</h2>
<table>
    <tr>
     <th>商品名</th>
     <th>商品画像</th>
     <th>商品説明</th>
     <th>商品価格</th>
     <th>商品ジャンル</th>
    </tr>
    <tr>
     <td><%= @item.name %></td>
     <td>
      <% if @item.image.attached? %>
       <%= image_tag @item.image, size: "300x300" %>
      <% else %>
       <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
     </td>
 　   <td><%= @item.introduction %></td>
     <td><%= @item.price %></td>
     <td><%= @item.genre.name %></td>
    </tr>
</table>
<%= form_with model: @cart_items, url: cart_items_path, method: :post do |f| %>
 <h3>数量を選択してください</h3>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.select :amount, *[1..3] %>
<%= f.submit "カートに入れる" %>
<% end %>
</div>
</div>
</div>