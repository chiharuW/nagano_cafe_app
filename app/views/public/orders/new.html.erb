<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-6">


<%= form_with model: @order, url: comfirm_orders_path, method: :post do |f| %>
 <th scope="row">お支払方法</th>
  <td>
   <div class="radio">
   <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method, "クレジットカード" %>
   <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method, "銀行振込" %>
   </div>
 <th scope="row">お届け先</th>
  <td>
 　 <div class="radio">
   <%= radio_button_tag(:selected_address, :radio1) %>
    <%= label_tag(:selected_address, "ご自身の住所") %>
    <p><%= @customer.postal_code %><br><%= @customer.address %></p>
    <p><%= @customer.first_name %><%= @customer.last_name %></p>
       
   <%= radio_button_tag(:selected_address, :radio2) %>
    <%= label_tag(:selected_address, "登録済住所から選択") %><br>
  　<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
        
   <%= radio_button_tag(:selected_address, :radio3) %>
    <%= label_tag(:selected_address, "新しいお届け先") %><br>
     <p>配送先宛名</p>
      <%= f.text_field :name %>
     <p>配送先郵便番号</p>
      <%= f.text_field :postal_code %>
     <p>配送先住所</p>
      <%= f.text_field :address %>
   </div>

 <%= f.submit "注文確認画面に進む", class:"btn btn-primary" %>
<% end %>


  </div>
</div>
</div>

