<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">


<h2>注文情報確認</h2>
<div><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger", "data-confirm" => "カート内の商品をすべて削除します。よろしいですか" %></td></div>
<div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th><%= image_tag cart_item.item.get_image, size: '100x100' %></th>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <div class="col-md-4">
        <table class="table">
          <tbody>
            <tr>
              <td>送料</td>
              <td><%= @shipping_fee %>円</td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td><%= @total.round.to_s(:delimited)%>円</td>
            </tr>
            <tr>
              <td>請求合計</td>
              <td><%=  @total + @shipping_fee %>円</td>
            </tr>
          </tbody>
        </table>
      </div>

 </div>

<div class="row">
 <div class="col-8">
  <p>支払方法　<%= @order.payment_method %></p>
  <p>お届け先　〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name%></p>

   <%= form_with model: @order, url:  orders_path, method: :post do |f| %>
    <%= f.hidden_field :customer_id %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :payment_method %>
    <%= f.hidden_field :shipping_fee, :value => @shipping_fee %>
    <%= f.hidden_field :total_payment, :value => @total+@shipping_fee %>
    <%= f.hidden_field :status, {value: 'payment_waiting'}  %>
    <%#= f.hidden_field :total, :value => @cart_items.inject(0) { |sum, item| sum + item.subtotal } %>
   </div>
  </div>

  <div class="row">
  <%= f.submit "注文を確定する", class:"btn btn-success col-md-4" %>
  <% end %>

  </div>
  </div>