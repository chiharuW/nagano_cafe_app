<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">

<h2>注文履歴一覧</h2>
<table class="table">
  <thead>
    <tr class="bg-light">
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払金額</th>
      <th scope="col">ステータス</th>
      <th scope="col">注文詳細</th>
   </tr>
  </thead>

 <% @orders.each do |order| %>
  <tbody>
   <tr>
      <th scope="row"><%= order.created_at.strftime('%Y/%m/%d') %></th>
      <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
      <td></td>
      <td><%= order.total_payment %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary", method: :get %></td>
    </tr>

  </tbody>
  <% end %>


