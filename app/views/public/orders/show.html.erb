<%= render 'public/sessions/list' %>

<div class="container">

 <div class="row">
  <div class="col-md-2">
　　<div class="p-3 mb-2 bg-light text-dark">注文履歴詳細</div>
　</div>
 </div>

 <div class="row">
  <div class="col-md-5">
   <b>注文情報</b>
   <table class="table table-bordered  mt-3">
    <tr scope="row"><td colspan="1" class="table-active">注文日</td><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
    <tr scope="row"><td colspan="1" class="table-active">配送先</td><td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></tr>
　　<tr scope="row"><td colspan="1" class="table-active">支払方法</td><td><%= @order.payment_method %></td></tr>
　　<tr scope="row"><td colspan="1" class="table-active">ステータス</td><td><%= @order.status %></td></tr>
   </table>
  </div>
 
  <div class="col-md-4">
   <b>請求情報</b>
   <table class="table table-bordered  mt-3">
    <tr scope="row"><td colspan="1" class="table-active">商品合計</td><td><%= @order.shipping_fee.round.to_s(:delimited) %>円</td></tr>
    <tr scope="row"><td colspan="1" class="table-active">配送料</td><td><%= @order.shipping_fee.round.to_s(:delimited) %>円</td></tr>
　　<tr scope="row"><td colspan="1" class="table-active">ご請求額</td><td><%= @order.total_payment.round.to_s(:delimited) %>円</td></tr>
   </table>
  </div>
 </div>
 
  <div class="row">
  <div class="col-md-5">
   <b>注文内容</b>
   <% @order_details.each do |order_detail| %>
   <table class="table table-bordered  mt-3">
    <tr scope="row"><td colspan="1" class="table-active">商品</td><td></td></tr>
    <tr scope="row"><td colspan="1" class="table-active">単価(税込)</td><td></td></tr>
　　<tr scope="row"><td colspan="1" class="table-active">個数</td><td><%= order_detail.amount %></td></tr>
　　<tr scope="row"><td colspan="1" class="table-active">小計</td><td><%= order_detail.amount_billed %></td></tr>
   </table>
   <% end %>
  </div>
  </div>

   </div>
