<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-6">

<h2>会員情報編集画面</h2>

 <%= form_with model: @customer, url:  update_customers_path, method: :patch do |f| %>
 <table>
  <tr><td>苗字</td><td> <%= f.text_field :last_name %></td></tr>
  <tr><td>名前</td><td> <%= f.text_field :first_name %></td></tr>
  <tr><td>苗字かな</td><td> <%= f.text_field :last_name_kana %></td></tr>
  <tr><td>名前かな</td><td> <%= f.text_field :first_name_kana %></td></tr>
  <tr><td>郵便番号</td><td> <%= f.text_field :postal_code %></td></tr>
  <tr><td>住所</td><td> <%= f.text_field :address %></td></tr>
  <tr><td>電話番号</td><td> <%= f.text_field :telephone_number %></td></tr>
 </table>
   <%= f.submit '更新' %>
 <% end %>

 <%= link_to "退会する", unsubscribe_customers_path %>
</div>
</div>
</div>


