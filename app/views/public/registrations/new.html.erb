<%= render 'public/sessions/list' %>

<div class="container">
<%= render "public/shared/error_messages", resource: resource %>
<div class="text-danger">
  <%= flash[:notice] %>
</div>

 <div class="row">
  <div class="col-md-2">
　　<div class="p-3 mb-2 bg-light text-dark">新規会員登録</div>
　</div>
 </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :last_name, "名前（姓）" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :last_name, autocomplete: "name" %></div>
    <div class="col-md-2 field mb-4 text-right"><%= f.label :first_name, "（名）" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :first_name, autocomplete: "name" %></div>
   </div>

   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :last_name_kana, "フリガナ（セイ）" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :last_name_kana, autocomplete: "name" %></div>
    <div class="col-md-2 field mb-4 text-right"><%= f.label :first_name_kana, "（メイ）" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :first_name_kana, autocomplete: "name" %></div>
   </div>

   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :email, "メールアドレス" %></div>
    <div class="col-md-2 field mb-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
   </div>

   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :postal_code, autocomplete: "postal-code" %></div>
   </div>
   
   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :address, "住所" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :address, autocomplete: "address" %></div>
   </div>
   
   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :telephone_number, "電話番号" %></div>
    <div class="col-md-2 field mb-3"><%= f.text_field :telephone_number, autocomplete: "tel" %></div>
   </div>
   
   <div class="row">
    <div class="col-md-3 field mb-4">
     <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>（<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="col-md-3 field mb-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
   </div>

   <div class="row">
    <div class="col-md-3 field mb-4"><%= f.label :password_confirmation, "パスワード（確認用）" %></div>
    <div class="col-md-2 field mb-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
   </div>

    <%= f.hidden_field :is_deleted %>

  <div class="actions pt-3">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>

<% end %>


 <div class="row">
  <div class="col-md-3">
　　<div class="bg-light text-dark">既に登録済の方</div>
　</div>
 </div>
 <div class="row">
  <div class="col-md-10 mx-4 mb-5">
 　<p><%= render "public/shared/links" %>からログインしてください。</p>
　</div>
 </div>


</div>
</div>
</div>
</div>