<%= render 'public/sessions/list' %>
<div class="container pt-5 pb-4">
 <div class="row">
  <div class="col-md-6">


<h2>ショッピングカート</h2>
<div><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger", "data-confirm" => "カート内の商品をすべて削除します。よろしいですか" %></td></div>
   <table>
    <thead>
    <th></th>
    <th>商品名</th>
    <th>単価(税込</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <% if current_customer.cart_items.present? %>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <td>
     <% if cart_item.item.image.attached? %>
      <%= image_tag cart_item.item.image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    </td>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    
    <td>
     <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
      <%= f.number_field :amount, min: 1, max:10 %>
      <%= f.submit "変更",class: "btn btn-success" %>
     <% end %>
    </td>
    
    <td><%= cart_item.subtotal %></td>
    <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか" %></td>
  </tbody>
  <% end %>
<% end %>
</table>

<div>合計金額<%= @total.round.to_s(:delimited)%>円</div>
<td><%= link_to "買い物を続ける", root_path, method: :get, class:"btn btn-primary" %></td>
<td><%= link_to "情報入力に進む", new_order_path, method: :get, class:"btn btn-success" %></td>
</div>
</div>
</div>